	</files>

	<!-- Back-end files -->
	<administration>
		<!-- Menu entries -->
		<menu view="EcfirmNetBase">COM_ECFIRMNETBASE</menu>

		<!-- Core files -->
		<files folder="administrator/components/com_EcfirmNetBase">
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>dispatcher.php</filename>
			<filename>index.html</filename>
			<folder>Controller</folder>
			<folder>Helper</folder>
			<folder>Model</folder>
			<folder>View</folder>
		</files>
	</administration>

	<languages folder="administrator/language">
		<language tag="en-GB">en-GB/en-GB.com_EcfirmNetBase.ini</language>
