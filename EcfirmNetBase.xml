	<!-- Scripts to run on installation -->
	<scriptfile>script.php</scriptfile>

	<!-- Media files -->
	<media folder="media/com_EcfirmNetBase" destination="com_EcfirmNetBase">
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
	</media>

	<languages folder="language">
